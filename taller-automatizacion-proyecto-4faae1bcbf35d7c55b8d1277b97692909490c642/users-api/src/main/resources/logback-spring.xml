<configuration scan="true">

    <property name="SERVICE_NAME" value="automatizacion-service"/>
    <property name="ENV" value="dev"/>

    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"${SERVICE_NAME}","env":"${ENV}"}</customFields>
        </encoder>
    </appender>

    <!-- RaÃ­z: nivel INFO -->
    <root level="info">
        <appender-ref ref="JSON_CONSOLE"/>
    </root>

    <!-- Logger para el paquete de la app con nivel DEBUG -->
    <logger name="edu.universidad.automatizacion" level="debug"/>

</configuration>
